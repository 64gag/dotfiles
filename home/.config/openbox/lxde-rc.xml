  <!-- Just replace everything between the keyboard tags with the contents in this file... -->
  <keyboard>
    <chainQuitKey>C-g</chainQuitKey>
    <!-- Kept from lubuntu-rc.xml -->
    <keybind key="A-F4"><action name="Close"/></keybind>
    <keybind key="A-space"><action name="ShowMenu"><menu>client-menu</menu></action></keybind>
    <keybind key="A-Tab"><action name="NextWindow"><finalactions><action name="Focus"/><action name="Raise"/><action name="Unshade"/></finalactions></action></keybind>
    <keybind key="A-S-Tab"><action name="PreviousWindow"><finalactions><action name="Focus"/><action name="Raise"/><action name="Unshade"/></finalactions></action></keybind>
    <keybind key="Print"><action name="Execute"><command>~/.local/bin/pa-screenshot.sh</command></action></keybind>
    <keybind key="A-Print"><action name="Execute"><command>scrot -s</command></action></keybind>
    <keybind key="A-F12"><action name="Execute"><command>lxsession-default launcher</command></action></keybind>
    <keybind key="C-F7"><action name="Execute"><command>xset dpms force off</command></action></keybind>
    <keybind key="C-F10"><action name="Execute"><command>xbacklight -dec 10</command></action></keybind>
    <keybind key="C-F11"><action name="Execute"><command>xbacklight -inc 10</command></action></keybind>

    <!-- Window tiling -->
    <keybind key="W-u"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>center</x><y>center</y><width>50%</width><height>50%</height><monitor>next</monitor></action></keybind><!-- # MiddleScreen -->
    <keybind key="W-i"><action name="MoveResizeTo"><monitor>next</monitor></action><action name="Maximize"/></keybind><!-- # FullScreen -->
    <keybind key="W-Up"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>0</x><y>0</y><width>100%</width><height>50%</height><monitor>next</monitor></action></keybind><!-- # HalfUpperScreen -->
    <keybind key="W-Down"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>0</x><y>-0</y><width>100%</width><height>50%</height><monitor>next</monitor></action></keybind><!-- # HalfLowerScreen -->
    <keybind key="W-y"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>0</x><y>0</y><width>50%</width><height>100%</height><monitor>next</monitor></action></keybind><!-- # HalfLeftScreen -->
    <keybind key="W-o"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>-0</x><y>0</y><width>50%</width><height>100%</height><monitor>next</monitor></action></keybind><!-- # HalfRightScreen -->
    <keybind key="S-W-y"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>0</x><y>0</y><width>50%</width><height>50%</height><monitor>next</monitor></action></keybind><!-- # UpperQuarterLeft -->
    <keybind key="S-W-u"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>0</x><y>-0</y><width>50%</width><height>50%</height><monitor>next</monitor></action></keybind><!-- # LowerQuarterLeft -->
    <keybind key="S-W-i"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>-0</x><y>-0</y><width>50%</width><height>50%</height><monitor>next</monitor></action></keybind><!-- # LowerQuarterRight -->
    <keybind key="S-W-o"><action name="UnmaximizeFull"/><action name="MoveResizeTo"><x>-0</x><y>0</y><width>50%</width><height>50%</height><monitor>next</monitor></action></keybind><!-- # UpperQuarterRight -->

    <!-- Desktop switching -->
    <keybind key="W-h"><action name="Desktop"><desktop>1</desktop></action></keybind>
    <keybind key="W-j"><action name="Desktop"><desktop>2</desktop></action></keybind>
    <keybind key="W-k"><action name="Desktop"><desktop>3</desktop></action></keybind>
    <keybind key="W-l"><action name="Desktop"><desktop>4</desktop></action></keybind>
    <keybind key="S-W-h"><action name="SendToDesktop"><desktop>1</desktop></action></keybind>
    <keybind key="S-W-j"><action name="SendToDesktop"><desktop>2</desktop></action></keybind>
    <keybind key="S-W-k"><action name="SendToDesktop"><desktop>3</desktop></action></keybind>
    <keybind key="S-W-l"><action name="SendToDesktop"><desktop>4</desktop></action></keybind>
    <keybind key="W-d"><action name="ToggleShowDesktop"/></keybind>

    <!-- Running applications -->
    <keybind key="W-a"><action name="Execute"><command>~/.local/bin/pa-default-apps.sh audio_player</command><focus>yes</focus></action></keybind>
    <keybind key="W-b"><action name="Execute"><command>~/.local/bin/pa-default-apps.sh web_browser</command><focus>yes</focus></action></keybind>
    <keybind key="W-c"><action name="Execute"><command>~/.local/bin/pa-default-apps.sh calculator</command><focus>yes</focus></action></keybind>
    <keybind key="W-f"><action name="Execute"><command>~/.local/bin/pa-default-apps.sh file_manager</command><focus>yes</focus></action></keybind>
    <keybind key="W-s"><action name="Execute"><command>~/.local/bin/pa-default-apps.sh quit</command><focus>yes</focus></action></keybind>
    <keybind key="W-t"><action name="Execute"><command>~/.local/bin/pa-default-apps.sh terminal</command><focus>yes</focus></action></keybind>
    <keybind key="W-r"><action name="Execute"><command>lxsession-default launcher</command><focus>yes</focus></action></keybind>
    <keybind key="W-v"><action name="Execute"><command>virtualbox</command><focus>yes</focus></action></keybind>

    <!-- Notes -->
    <keybind key="W-q"><action name="Execute"><command>~/.local/bin/quick-note.sh</command><focus>yes</focus></action></keybind>
    <keybind key="W-w"><action name="Execute"><command>~/.local/bin/quick-note-image.sh</command><focus>yes</focus></action></keybind>

    <!-- Volume control -->
    <keybind key="W-n"><action name="Execute"><command>~/.local/bin/pa-sound-pactl-volume-decrease.sh</command></action></keybind>
    <keybind key="S-W-n"><action name="Execute"><command>~/.local/bin/pa-sound-pactl-volume-increase.sh</command></action></keybind>
    <keybind key="W-m"><action name="Execute"><command>~/.local/bin/pa-sound-pactl-mute-toggle.sh</command></action></keybind>

    <!-- Monitor control -->
    <keybind key="XF86Display"><action name="Execute"><command>~/.local/bin/monitor-configure.sh</command></action></keybind>
    <keybind key="W-p"><action name="Execute"><command>~/.local/bin/monitor-configure.sh</command></action></keybind>

    <!-- Avoid touching the mouse -->
    <keybind key="C-W-h"><action name="Execute"><command>xwit -root -rwarp -100 0</command></action></keybind>
    <keybind key="C-W-j"><action name="Execute"><command>xwit -root -rwarp 0 100</command></action></keybind>
    <keybind key="C-W-k"><action name="Execute"><command>xwit -root -rwarp 0 -100</command></action></keybind>
    <keybind key="C-W-l"><action name="Execute"><command>xwit -root -rwarp 100 0</command></action></keybind>
    <keybind key="C-W-u"><action name="Execute"><command>xdotool click 1</command></action></keybind>
    <keybind key="C-W-i"><action name="Execute"><command>xdotool click 2</command></action></keybind>
    <keybind key="C-W-o"><action name="Execute"><command>xdotool click 3</command></action></keybind>
    <keybind key="W-KP_8"><action name="Execute"><command>xwit -root -rwarp 0 -200</command></action></keybind>
    <keybind key="W-KP_2"><action name="Execute"><command>xwit -root -rwarp 0 200</command></action></keybind>
    <keybind key="W-KP_4"><action name="Execute"><command>xwit -root -rwarp -200 0</command></action></keybind>
    <keybind key="W-KP_6"><action name="Execute"><command>xwit -root -rwarp 200 0</command></action></keybind>
    <keybind key="W-KP_3"><action name="Execute"><command>xwit -root -rwarp 200 200</command></action></keybind>
    <keybind key="W-KP_9"><action name="Execute"><command>xwit -root -rwarp 200 -200</command></action></keybind>
    <keybind key="W-KP_1"><action name="Execute"><command>xwit -root -rwarp -200 200</command></action></keybind>
    <keybind key="W-KP_7"><action name="Execute"><command>xwit -root -rwarp -200 -200</command></action></keybind>
    <keybind key="C-W-KP_8"><action name="Execute"><command>xwit -root -rwarp 0 -40</command></action></keybind>
    <keybind key="C-W-KP_2"><action name="Execute"><command>xwit -root -rwarp 0 40</command></action></keybind>
    <keybind key="C-W-KP_4"><action name="Execute"><command>xwit -root -rwarp -40 0</command></action></keybind>
    <keybind key="C-W-KP_6"><action name="Execute"><command>xwit -root -rwarp 40 0</command></action></keybind>
    <keybind key="C-W-KP_3"><action name="Execute"><command>xwit -root -rwarp 40 40</command></action></keybind>
    <keybind key="C-W-KP_9"><action name="Execute"><command>xwit -root -rwarp 40 -40</command></action></keybind>
    <keybind key="C-W-KP_1"><action name="Execute"><command>xwit -root -rwarp -40 40</command></action></keybind>
    <keybind key="C-W-KP_7"><action name="Execute"><command>xwit -root -rwarp -40 -40</command></action></keybind>
    <keybind key="C-S-W-KP_8"><action name="Execute"><command>xwit -root -rwarp 0 -5</command></action></keybind>
    <keybind key="C-S-W-KP_2"><action name="Execute"><command>xwit -root -rwarp 0 5</command></action></keybind>
    <keybind key="C-S-W-KP_4"><action name="Execute"><command>xwit -root -rwarp -5 0</command></action></keybind>
    <keybind key="C-S-W-KP_6"><action name="Execute"><command>xwit -root -rwarp 5 0</command></action></keybind>
    <keybind key="C-S-W-KP_3"><action name="Execute"><command>xwit -root -rwarp 5 5</command></action></keybind>
    <keybind key="C-S-W-KP_9"><action name="Execute"><command>xwit -root -rwarp 5 -5</command></action></keybind>
    <keybind key="C-S-W-KP_1"><action name="Execute"><command>xwit -root -rwarp -5 5</command></action></keybind>
    <keybind key="C-S-W-KP_7"><action name="Execute"><command>xwit -root -rwarp -5 -5</command></action></keybind>
    <keybind key="W-KP_Enter"><action name="Execute"><command>xdotool click 1</command></action></keybind>
    <keybind key="W-KP_Decimal"><action name="Execute"><command>xdotool click 2</command></action></keybind>
    <keybind key="W-KP_0"><action name="Execute"><command>xdotool click 3</command></action></keybind>
    <keybind key="W-KP_Divide"><action name="Execute"><command>xdotool click 1</command></action></keybind>
    <keybind key="W-KP_Multiply"><action name="Execute"><command>xdotool click 2</command></action></keybind>
    <keybind key="W-KP_Subtract"><action name="Execute"><command>xdotool click 3</command></action></keybind>
  </keyboard>
