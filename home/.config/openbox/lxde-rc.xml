  <keyboard>
    <keybind key="Print">
      <action name="Execute">
        <command>~/git/dotfiles/scripts/screenshot</command>
      </action>
    </keybind>
<!-- Keybindings for window tiling -->
    <keybind key="W-y">        # HalfLeftScreen
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo"><x>0</x><y>0</y><height>100%</height><width>50%</width></action>
    </keybind>
    <keybind key="W-u">        # MiddleScreen
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo"><x>center</x><y>center</y><width>50%</width><height>50%</height></action>
    </keybind>
    <keybind key="W-i">        # FullScreen
      <action name="Maximize"/>
    </keybind>
    <keybind key="W-o">        # HalfRightScreen
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo"><x>-0</x><y>0</y><height>100%</height><width>50%</width></action>
    </keybind>
    <keybind key="S-W-y">        # UpperQuarterLeft
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo"><x>0</x><y>0</y><height>50%</height><width>50%</width></action>
    </keybind>
    <keybind key="S-W-u">        # LowerQuarterLeft
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo"><x>0</x><y>-0</y><height>50%</height><width>50%</width></action>
    </keybind>
    <keybind key="S-W-i">        # LowerQuarterRight
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo"><x>-0</x><y>-0</y><height>50%</height><width>50%</width></action>
    </keybind>
    <keybind key="S-W-o">        # UpperQuarterRight
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo"><x>-0</x><y>0</y><height>50%</height><width>50%</width></action>
    </keybind>
<!-- Keybindings for desktop switching -->
    <keybind key="W-h">
      <action name="Desktop">
        <desktop>1</desktop>
      </action>
    </keybind>
    <keybind key="W-j">
      <action name="Desktop">
        <desktop>3</desktop>
      </action>
    </keybind>
    <keybind key="W-k">
      <action name="Desktop">
        <desktop>4</desktop>
      </action>
    </keybind>
    <keybind key="W-l">
      <action name="Desktop">
        <desktop>2</desktop>
      </action>
    </keybind>
    <keybind key="S-W-h">
      <action name="SendToDesktop">
        <desktop>1</desktop>
      </action>
    </keybind>
    <keybind key="S-W-j">
      <action name="SendToDesktop">
        <desktop>3</desktop>
      </action>
    </keybind>
    <keybind key="S-W-k">
      <action name="SendToDesktop">
        <desktop>4</desktop>
      </action>
    </keybind>
    <keybind key="S-W-l">
      <action name="SendToDesktop">
        <desktop>2</desktop>
      </action>
    </keybind>
    <keybind key="W-d">
      <action name="ToggleShowDesktop"/>
    </keybind>
    <!-- Keybindings for running applications -->
    <keybind key="W-t">
      <action name="Execute">
        <command>lxterminal</command>
        <focus>yes</focus>
      </action>
    </keybind>
    <keybind key="W-b">
      <action name="Execute">
        <command>firefox</command>
        <focus>yes</focus>
      </action>
    </keybind>
    <keybind key="W-s">
      <action name="Execute">
        <command>lxde-logout</command>
        <focus>yes</focus>
      </action>
    </keybind>
    <keybind key="W-f">
      <action name="Execute">
        <command>pcmanfm</command>
        <focus>yes</focus>
      </action>
    </keybind>
    <keybind key="W-v">
      <action name="Execute">
        <command>virtualbox</command>
        <focus>yes</focus>
      </action>
    </keybind>
  </keyboard>
